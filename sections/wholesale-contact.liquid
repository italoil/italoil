<section class="section" id="contact">
  <div class="container">
    <div style="max-width: 700px; margin: 0 auto; text-align: center;">
      <h2 style="margin-bottom: 2rem;">{{ section.settings.title | default: 'Start Your Wholesale Account' }}</h2>
      <p style="font-size: 1.8rem; margin-bottom: 4rem;">
        {{ section.settings.description | default: 'Contact us to discuss your wholesale needs. We\'re here to support your business with premium Italian olive oil.' }}
      </p>

      <div style="background-color: var(--color-secondary); padding: 4rem; margin-bottom: 3rem;">
        <h3 style="margin-bottom: 2rem;">Contact Information</h3>
        <p style="font-size: 1.8rem; margin-bottom: 1.5rem;">
          <strong>Email:</strong><br>
          <a href="mailto:italoil.store@gmail.com">italoil.store@gmail.com</a>
        </p>
        <p style="font-size: 1.6rem; margin-bottom: 2rem;">
          We typically respond within 24 hours
        </p>
      </div>

      <div class="wholesale-form">
        {% form 'contact' %}
          {%- if form.posted_successfully? -%}
            <div style="background-color: #d4edda; color: #155724; padding: 1.5rem; margin-bottom: 2rem; border-radius: 4px;">
              Thank you for your interest! We'll be in touch shortly.
            </div>
          {%- endif -%}

          {%- if form.errors -%}
            <div style="background-color: #f8d7da; color: #721c24; padding: 1.5rem; margin-bottom: 2rem; border-radius: 4px;">
              {{ form.errors | default_errors }}
            </div>
          {%- endif -%}

          <input type="hidden" name="contact[subject]" value="Wholesale Inquiry">

          <div style="margin-bottom: 2rem; text-align: left;">
            <label for="contact-name">Business Name *</label>
            <input
              type="text"
              id="contact-name"
              name="contact[name]"
              required
            >
          </div>

          <div style="margin-bottom: 2rem; text-align: left;">
            <label for="contact-email">Email *</label>
            <input
              type="email"
              id="contact-email"
              name="contact[email]"
              required
            >
          </div>

          <div style="margin-bottom: 2rem; text-align: left;">
            <label for="contact-phone">Phone</label>
            <input
              type="tel"
              id="contact-phone"
              name="contact[phone]"
            >
          </div>

          <div style="margin-bottom: 2rem; text-align: left;">
            <label for="contact-message">Tell us about your business and wholesale needs *</label>
            <textarea
              id="contact-message"
              name="contact[body]"
              rows="5"
              required
            ></textarea>
          </div>

          <button type="submit" class="button button--full">
            Submit Wholesale Inquiry
          </button>
        {% endform %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Wholesale Contact Form",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Start Your Wholesale Account"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Contact us to discuss your wholesale needs. We're here to support your business with premium Italian olive oil."
    }
  ]
}
{% endschema %}
