<section class="brand-story section">
  <div class="container">
    <div class="brand-story__content">
      {%- if section.settings.image != blank -%}
        <div class="brand-story__image">
          <img 
            src="{{ section.settings.image | image_url: width: 800 }}"
            srcset="{{ section.settings.image | image_url: width: 400 }} 400w,
                    {{ section.settings.image | image_url: width: 800 }} 800w"
            sizes="(min-width: 1024px) 50vw, 100vw"
            alt="{{ section.settings.image.alt | escape }}"
            loading="lazy"
          >
        </div>
      {%- endif -%}

      <div class="brand-story__text">
        {%- if section.settings.title != blank -%}
          <h2>{{ section.settings.title }}</h2>
        {%- endif -%}

        {%- if section.settings.text != blank -%}
          <div class="rte">
            {{ section.settings.text }}
          </div>
        {%- endif -%}

        {%- if section.settings.button_label != blank -%}
          <a href="{{ section.settings.button_link }}" class="button">
            {{ section.settings.button_label }}
          </a>
        {%- endif -%}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Brand Story",
  "tag": "section",
  "class": "brand-story-section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Our Story"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Story Text",
      "default": "<p>From the hills of Lake Bolsena comes ITALOIL, a family-owned tradition of producing the finest Italian extra virgin olive oil. Our early harvest 2025 olives are carefully hand-picked and cold-pressed within hours to preserve the authentic flavors of Italy.</p><p>DOP certified and organic, our olive oil represents generations of Italian expertise and passion for quality.</p>"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Learn More"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Brand Story"
    }
  ]
}
{% endschema %}
