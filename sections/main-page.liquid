<div class="page-header">
  <div class="container">
    <h1>{{ page.title }}</h1>
  </div>
</div>

<section class="section">
  <div class="container">
    <div class="page-content rte">
      {{ page.content }}
    </div>
  </div>
</section>

<style>
  .rte {
    font-size: 1.6rem;
    line-height: 1.8;
  }

  .rte h2 {
    margin-top: 3rem;
    margin-bottom: 1.5rem;
  }

  .rte h3 {
    margin-top: 2rem;
    margin-bottom: 1rem;
  }

  .rte p {
    margin-bottom: 1.6rem;
  }

  .rte ul,
  .rte ol {
    margin-bottom: 1.6rem;
    padding-left: 2rem;
  }

  .rte li {
    margin-bottom: 0.8rem;
  }

  .rte img {
    max-width: 100%;
    height: auto;
    margin: 2rem 0;
  }

  .rte a {
    color: var(--color-primary);
    text-decoration: underline;
  }

  .rte a:hover {
    color: var(--color-accent);
  }
</style>

{% schema %}
{
  "name": "Page",
  "tag": "section",
  "class": "page-section"
}
{% endschema %}
