<!doctype html>
<html class="no-js" lang="{{ request.locale.iso_code }}">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <meta name="theme-color" content="#2C5530">

  <title>{{ shop.name }}</title>

  {{ content_for_header }}

  <style>
    :root {
      --color-primary: #2C5530;
      --color-secondary: #F5F1E8;
      --color-accent: #C8A882;
      --color-text: #333333;
      --color-background: #FFFFFF;
    }

    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }

    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
      font-size: 16px;
      line-height: 1.6;
      color: var(--color-text);
      background-color: var(--color-secondary);
      display: flex;
      align-items: center;
      justify-content: center;
      min-height: 100vh;
      padding: 2rem;
    }

    .password-page {
      max-width: 500px;
      width: 100%;
      background-color: var(--color-background);
      padding: 4rem 3rem;
      text-align: center;
      box-shadow: 0 4px 24px rgba(44, 85, 48, 0.1);
    }

    h1 {
      font-size: 3.6rem;
      color: var(--color-primary);
      margin-bottom: 1rem;
      font-weight: 700;
      letter-spacing: 0.1em;
      text-transform: uppercase;
    }

    p {
      font-size: 1.8rem;
      margin-bottom: 3rem;
      color: var(--color-text);
    }

    form {
      margin-bottom: 2rem;
    }

    input[type="password"] {
      width: 100%;
      padding: 1.2rem 1.6rem;
      font-size: 1.6rem;
      border: 1px solid #ddd;
      margin-bottom: 1rem;
    }

    input[type="password"]:focus {
      outline: none;
      border-color: var(--color-primary);
    }

    button {
      width: 100%;
      padding: 1.4rem 3.2rem;
      font-size: 1.6rem;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.05em;
      border: 2px solid var(--color-primary);
      background-color: var(--color-primary);
      color: var(--color-secondary);
      cursor: pointer;
      transition: all 0.3s ease;
    }

    button:hover {
      background-color: transparent;
      color: var(--color-primary);
    }

    .errors {
      background-color: #f8d7da;
      color: #721c24;
      padding: 1rem;
      margin-bottom: 1rem;
      border-radius: 4px;
    }

    .powered-by {
      margin-top: 3rem;
      font-size: 1.4rem;
      color: #999;
    }

    .social-links {
      margin-top: 2rem;
      display: flex;
      gap: 1.5rem;
      justify-content: center;
    }

    .social-links a {
      color: var(--color-primary);
      text-decoration: none;
      transition: color 0.3s ease;
    }

    .social-links a:hover {
      color: var(--color-accent);
    }
  </style>
</head>

<body>
  <div class="password-page">
    <h1>{{ shop.name }}</h1>
    <p>Coming Soon</p>

    {% form 'storefront_password' %}
      {{ form.errors | default_errors }}
      
      <input 
        type="password" 
        name="password" 
        placeholder="Enter password"
        autofocus
      >
      
      <button type="submit">Enter</button>
    {% endform %}

    {%- if shop.password_message != blank -%}
      <div style="margin-top: 2rem; font-size: 1.6rem;">
        {{ shop.password_message }}
      </div>
    {%- endif -%}

    <div class="social-links">
      {%- if settings.social_facebook != blank -%}
        <a href="{{ settings.social_facebook }}" target="_blank" rel="noopener">
          Facebook
        </a>
      {%- endif -%}
      {%- if settings.social_instagram != blank -%}
        <a href="{{ settings.social_instagram }}" target="_blank" rel="noopener">
          Instagram
        </a>
      {%- endif -%}
    </div>

    <div class="powered-by">
      Powered by Shopify
    </div>
  </div>
</body>
</html>
